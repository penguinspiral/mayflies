{
  "description": "Renovate configuration for GitHub Actions updates",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "repositories": [
    "penguinspiral/mayflies"
  ],
  "dependencyDashboard": true,
  "branchPrefix": "chore/",
  "prConcurrentLimit": 5,
  "rebaseWhen": "conflicted",
  "semanticCommits": "enabled",
  "minimumReleaseAge": "14 days",
  "packageRules": [
    {
      "description": "Group all GitHub Actions updates into a single PR",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": false
    },
    {
      "description": "Auto-merge minor and patch updates for GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
